@page
@model OnlineShop.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "Register";
}
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4">
                <form method="post" enctype="multipart/form-data" class="form-signin text-center">
                    <div asp-validation-summary="ModelOnly"></div>
                    @*<img class="mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
                    <h1 class="h3 mb-3 font-weight-normal">Register</h1>
                   
                        
                            <div class="form-group">
                                <label asp-for="User.FirstName" class="sr-only control-label">First Name</label>
                                <input asp-for="User.FirstName" class="form-control" placeholder="First Name" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="User.LastName" class="sr-only control-label">Last Name</label>
                                <input asp-for="User.LastName" class="form-control" placeholder="Last Name" required>
                            </div>
                            @*<div class="form-group">
                                <label asp-for="" class="sr-only control-label">Address</label>
                                <input type="text" id="inputAddress" class="form-control" placeholder="Address" required />
                            </div>*@
                       
                        <div class="">
                            <div class="form-group">
                                <label asp-for="User.Email" class="sr-only control-label">Email address</label>
                                <input asp-for="User.Email" type="email" class="form-control" placeholder="Email address" required />
                            </div>
                            <div class="form-group">
                                <label asp-for="User.Password" class="sr-only control-label">Password</label>
                                <input asp-for="User.Password" class="form-control" placeholder="Password" required />
                            </div>
                            <div class="form-group">
                                <label for="confirmPassword" class="sr-only control-label">Confirm Password</label>
                                <input type="password" id="confirmPassword" class="form-control" placeholder="Confirm Password" required />
                            </div>
                        </div>
                   
                    <input type="submit" value="Register" class="primary-btn"/><hr />
                    <p>You already have a account?<a asp-page="Login"> Login</a></p>
                </form>
            </div>
            <div class="col-lg-4"></div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->