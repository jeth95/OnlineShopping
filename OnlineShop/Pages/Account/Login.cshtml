@page
@model OnlineShop.Pages.Account.LoginModel
@{
}
<!-- SECTION -->
<div class="section">
    <!-- container -->
    <div class="container">
        <!-- row -->
        <div class="row">
            <div class="col-lg-4"></div>
            <div class="col-lg-4"> 
                <form class="form-signin text-center" method="post">
                    <p>@Model.Error</p>
                    @*<img class="mb-4" src="../assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">*@
                    <h1 class="h3 mb-3 font-weight-normal">Login</h1>
                    <div class="form-group">
                        <label for="inputEmail" class="sr-only control-label">Email address</label>
                        <input asp-for="EmailAddress" type="email" class="form-control" id="inputEmail" placeholder="Email address" autofocus>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword" class="sr-only control-label">Password</label>
                        <input asp-for="Password" type="password" class="form-control" id="inputPassword" placeholder="Password" required>
                    </div>
                        <div class="checkbox mb-3">
                            <label>
                                <input type="checkbox" value="remember-me"> Remember me
                            </label>
                        </div>
                        <button class="primary-btn" type="submit" value="Submit" asp-page-handler="Submit">Sign in</button><hr />
                        <p>You don't have a account?<a asp-page="Register"> Register</a></p>
                </form>
            </div>
            <div class="col-lg-4"></div>
        </div>
        <!-- /row -->
    </div>
    <!-- /container -->
</div>
<!-- /SECTION -->