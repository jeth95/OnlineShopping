@page
@model OnlineShop.Pages.Products.AddModel

@{
    ViewData["Title"] = "Add";
}

<h2>Add Product</h2>
<div class="row">
    <div class="col-md-4"></div>
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Product.Name" class="control-label"></label>
                <input asp-for="Product.Name" class="form-control" />
                <span asp-validation-for="Product.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Price" class="control-label"></label>
                <input asp-for="Product.Price" class="form-control" />
                <span asp-validation-for="Product.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.OldPrice" class="control-label"></label>
                <input asp-for="Product.OldPrice" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Product.Category" class="control-label"></label>
                <input asp-for="Product.Category" class="form-control" />
                <span asp-validation-for="Product.Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Product.Description" class="control-label"></label>
                <input asp-for="Product.Description" class="form-control" />
                <span asp-validation-for="Product.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
               <label asp-for="Product.Images" class="control-label"></label>
                <input  multiple asp-for="Product.Images" class="form-control" />
                <span asp-validation-for="Product.Images" class="text-danger"></span>
            </div>
            <div class="col-md-4"></div>
            <div class="form-group">
                <input type="submit" value="Add Product" class="primary-btn" />
                <a asp-page="../Account/Admin" class="primary-btn"><i class="fa fa-arrow-left"></i></a>
            </div>     
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
